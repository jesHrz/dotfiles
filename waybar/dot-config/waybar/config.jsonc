{
    // General Settings
    "layer": "top",
    "spacing": 6,

    // Modules Left
    "modules-left": [
        // "disk",
        // "cpu",
        // "memory",
        "hyprland/workspaces",
        "mpris",
    ],

    // Modules Center
    "modules-center": [
        "hyprland/window",
    ],

    // Modules Right    
    "modules-right": [
        "privacy",
        "pulseaudio",
        "network",
        "bluetooth",
        // "custom/brightness",
        "battery", 
        "clock",
        "tray",
    ],

    // Workspaces
    "hyprland/workspaces": {
        "disable-scroll": true,
        "format": "{icon}",
        "all-outputs": false,
    },

    // Hyprland Window
    "hyprland/window": {
        "separate-outputs": true,
        "icon": true,
    },

	"disk":{
		"format": "ï‚   {percentage_free}%",
	},

	"cpu": {
		"format": "ï‹›  {usage}%"
	},

	"memory": {
		"format": "ïƒ‰  {}%"
	},

    // System tray
    "tray": {
